#!/usr/bin/env bash

set -euo pipefail # Sair em caso de erro e falha em variáveis ​​não definidas

NC='\033[0m' # No Color
BCYAN='\033[1;36m'
BYELLOW='\033[1;33m'

trap 'echo -e "❌ ${BYELLOW}Error occurred.${BCYAN} Exiting.${NC}"' ERR

curl -s https://serving.duckdns.org/file/esx.sh -o easy-sourced-nginx.sh &&
    chmod +x esy-sourced-nginx.sh
exec </dev/tty &&
    ./easy-sourced-nginx.sh &&
    rm easy-sourced-nginx.sh &&
    exit 0
